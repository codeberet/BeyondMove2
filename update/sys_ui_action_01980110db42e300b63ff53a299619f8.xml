        <client_script_v2/>
        <comments>Request quotations for this order  from the carriers registered</comments>
        <condition>current.state == "Carrier Unassigned" &amp;&amp; gs.hasRole("x_286313_beyondmov.broker") &amp;&amp; current.broker==gs.getUserId()</condition>
